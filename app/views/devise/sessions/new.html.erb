<%# HTMLのtitle定義部 %>
<% provide(:title, I18n.t("label.devise.sign_in")) %>

<%# 本体出力部 %>
<h1><%= I18n.t("label.devise.sign_in") %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field">
  <%= f.email_field :email, placeholder: Employee.human_attribute_name(:email), autofocus: true, autocomplete: "email", class: "devise-form" %>
</div>

<div class="field">
  <%= f.password_field :password, placeholder: Employee.human_attribute_name(:password), autocomplete: "current-password", class: "devise-form" %>
</div>

<div class="actions">
  <%= f.submit I18n.t("label.devise.sign_in"), {class: "btn btn-primary devise-form"} %>
</div>

<% if devise_mapping.rememberable? %>
<div class="field" style="margin:10px;">
  <%= f.check_box :remember_me %>
  <%= f.label "次回から自動ログイン" %>
</div>
<% end %>

<% end %>

<%= render "devise/shared/links" %>
