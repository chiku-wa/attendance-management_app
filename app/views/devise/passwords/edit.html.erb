<%# HTMLのtitle定義部 %>
<% provide(:title, I18n.t("devise.passwords.edit.change_your_password")) %>

<%= render "devise/shared/error_messages", resource: resource %>

<%# 本体出力部 %>
<h1><%= I18n.t("devise.passwords.edit.change_your_password") %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= f.hidden_field :reset_password_token %>

<div class="field">
  <% if @minimum_password_length %>
  <p>
    パスワードを<%= @minimum_password_length %>文字以上で指定してください。
  </p>
  <% end %>
  <%= f.password_field :password, placeholder: I18n.t("devise.passwords.edit.new_password"), autofocus: true, autocomplete: "new-password", class: "devise-form" %>
</div>

<div class="field">
  <%= f.password_field :password_confirmation, placeholder: I18n.t("devise.passwords.edit.confirm_new_password"), autocomplete: "new-password", class: "devise-form" %>
</div>

<div class="actions">
  <%= f.submit I18n.t("devise.passwords.edit.change_your_password"), {class: "btn btn-primary devise-form"} %>
</div>
<% end %>

<%= render "devise/shared/links" %>
