<%# HTMLのtitle定義部 %>
<% provide(:title, I18n.t("devise.passwords.edit.change_your_password")) %>

<%= render "devise/shared/error_messages", resource: resource %>

<%# 本体出力部 %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= f.hidden_field :reset_password_token %>

<div class="row">
  <div class="col">
    <div class="field">
      <%= f.password_field :password, placeholder: I18n.t("devise.passwords.edit.new_password"), autofocus: true, autocomplete: "new-password", class: "devise-form form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: I18n.t("devise.passwords.edit.confirm_new_password"), autocomplete: "new-password", class: "devise-form form-control" %>
    </div>
  </div>
</div>

<div class="actions">
  <%= f.submit I18n.t("devise.passwords.edit.change_your_password"), {class: "btn btn-primary devise-form"} %>
</div>
<% end %>

<%= render "devise/shared/links" %>
