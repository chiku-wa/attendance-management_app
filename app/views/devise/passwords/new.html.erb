<%# HTMLのtitle定義部 %>
<% provide(:title, I18n.t("devise.passwords.edit.change_my_password")) %>

<%= render "devise/shared/error_messages", resource: resource %>

<%# 本体出力部 %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

<div class="row">
  <div class="col">
    <div class="field">
      <%= f.email_field :email, placeholder: Employee.human_attribute_name(:email), autofocus: true, autocomplete: "email", class: "devise-form form-control" %>
    </div>
  </div>
</div>

<div class="actions">
  <%= f.submit I18n.t("devise.passwords.edit.change_my_password"), id: "submit_password_reset", class: "btn btn-primary devise-form" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
